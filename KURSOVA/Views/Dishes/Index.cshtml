@model IEnumerable<KURSOVA.Models.Dish>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Страви</h1>

<p>
    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="First group">
            @if (AccessInfo.UserType == Constants.RestAdmin)
            {
                <button class="btn-secondary mr-2" onclick="location.href='@Url.Action("Create")'" style="padding:10px">
                    Створити
                </button>
            }

            <form asp-action="Index" method="get" class="btn-group mr-2">
                <div class="input-group mr-2">
                    <select name="dishTypeId" class="form-control"
                            aria-label="Тип Страви" aria-describedby="btnGroupAddon" asp-items="ViewBag.DishTypeId">
                        <option value="">тип стави - всі -</option>
                    </select>
                </div>
                <div class="input-group mr-2">
                    <input type="text" class="form-control" placeholder="Назва страви" aria-label="Назва страви"
                           aria-describedby="btnGroupAddon" name="dishName" />
                </div>
                <input type="submit" value="Фільтрувати" class="btn btn-outline-primary" />
            </form>
        </div>


    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DishType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitOfMeasure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishType.DishType1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitOfMeasure.UnitOfMeasure1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DishId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.DishId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.DishId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
